@model AppUserListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 style="font-weight:bold;text-align:center;color:white"><i class="fas fa-user-circle mr-2"></i>PROFİL  SAYFASI </h3>
<br />

    @if (TempData["message"] != null)
    {
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <form style=" background-color:#f5f5f5;
        border-radius: 20px;" asp-action="Index" method="post" class="w-75 mx-auto p-3 shadow " enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id" />
        <div class="form-group">
            <label asp-for="@Model.Name" style="font-weight:bold">AD :</label>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <input asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Surname" style="font-weight:bold">SOYAD :</label>
            <span asp-validation-for="@Model.Surname" class="text-danger"></span>
            <input asp-for="@Model.Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email" style="font-weight:bold">EMAİL :</label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <input asp-for="@Model.Email" class="form-control" />
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">

                </div>
                <div class="col-md-4">
                    <div>
                        <h5 style="font-weight:bold">Mevcut Resim</h5>
                        <img src="~/img/@Model.Picture" style="height:250px;width:200px;" alt="@Model.Name" />
                    </div>

                </div>

                <div class="col-md-4">
                    <div id="areapreview" style="display:none!important;">
                        <h5 style="font-weight:bold">Seçtiğiniz Resim</h5>
                        <img id="preview" src="" style="height:250px;width:200px;" />
                    </div>

                </div>
                <div class="col-md-2">

                </div>

                <div class="col-md-12">
                    <label style="font-weight:bold"> Resim Seç</label>
                    <input type="file" class="form-control-file" name="img" id="Image" />
                </div>
            </div>
        </div>

        <button type="submit" class=" btn btn-info btn-sm mt-2">
            <i class="fas fa-check mr-2"></i>
            Kaydet
        </button>


    </form>
    <br />

@section JavaScript{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Image").change(function (e) {


                $("#areapreview").show();
                $("#preview").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>

}
