@model List<UrgencyListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<br /><br /><br /><br /><br />
<h4 class="font-weight-bold text-center" style="color:white"><i class="fas fa-exclamation mr-2"></i>ACİLİYET  İŞLEMLERİ </h4>
<br />

<center>
    <div class="col-md-8" style="background-color:white;border-radius:20px;">
        @if (Model.Count != 0)

        {
            <center> <a style="background-color: #00adbb;color:white;float:right" asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-lg my-2"><i class="fas fa-plus-circle mr-2"></i>Yeni Aciliyet Ekle</a></center>



            <table class="table table-sm table-hover table-striped" style="font-weight:bold ;border-radius:20px">
                <thead>
                    <tr>
                        <th>TANIM</th>
                        <th>İŞLEM</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Description</td>
                            <td>
                                <a style="float:right;" asp-action="UpdateUrgency" asp-controller="Urgency" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit mr-2"></i>Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <div class="text-center  mt-4">
                <p class="lead"> Sistemde kayıtlı aciliyet durumu bulunamadı.</p>

                <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-sm btn-info my-2">Yeni Aciliyet Ekle</a>
            </div>
        }




    </div>
</center>