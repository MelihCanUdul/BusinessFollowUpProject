@model TaskListAllViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3 style="font-weight:bold;text-align:center;color:white"><i class="far fa-file mr-2">İŞ DETAYI </i></h3>
<br />
<div style="background-color:white;border-radius:20px;">
    @if (Model.Reports.Count > 0)

    {<div class="text-center">
            <a asp-action="GetExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-light  my-2 mr-2"><i class="fas fa-file-excel"></i>Excel</a>
            <a asp-action="GetPdf" asp-route-id="@Model.Id" target="_blank" class="btn btn-light  my-2 mr-2"><i class="fas fa-file-pdf"></i>Pdf</a>
        </div>
        <table class="table table-hover table-sm text-center table-bordered table-striped">

            <tr>
                <th colspan="2" style="font-weight:bold"> @Model.AppUser.Name @Model.AppUser.SurName  adlı personelinizin @Model.Name adlı iş için  yazmış olduğu raporlar</th>
            </tr>

            <tr>
                <th>Tanım</th>
                <th>Detay</th>

            </tr>
            @foreach (var item in Model.Reports)
            {
                <tr>

                    <td>@item.Description</td>
                    <td>@item.Detail</td>
                </tr>
            }
        </table>

    }

    else
    {
        <div class="border  mt-2 text-center font-weight-bold">

            @Model.AppUser.Name @Model.AppUser.SurName personeliniz şu anda @Model.Name
            görevi üzerinde çalışıyor. Henüz bir rapor yazmamış.
        </div>
    }
</div>