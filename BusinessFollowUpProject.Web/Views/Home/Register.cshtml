@model AppUserAddViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}
<div class="main-container">
    <div id="log-in" class="right-container log-in">
        <img src="~/img/interra.svg" style="width:70%;" class="mb-5" />
        <h3 class="text-sm-center mb-3 font-weight-bold">Proje Takip Sistemi Kayıt Ol</h3>
        <form asp-action="Register" method="post" style=" width:80%;">

            <div class="form-group">

                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                <input asp-for="@Model.Name" class="form-control" placeholder="İsim" />
            </div>
            <div class="form-group">

                <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                <input asp-for="@Model.Surname" class="form-control" placeholder="Soyisim" />
            </div>
            <div class="form-group">

                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                <input asp-for="@Model.UserName" class="form-control" placeholder="Kullanıcı Adı" />
            </div>
            <div class="form-group">

                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                <input asp-for="@Model.Email" class="form-control" placeholder="Email" />
            </div>
            <div class="form-group">

                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Şifre" />
            </div>
            <div class="form-group">

                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" />
            </div>



            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <button type="submit" class=" btn mb-2" style="background-color: #00adbb;color:white">Kayıt Ol</button><br />
            <span>Giriş Yapma Ekranına </span> <a asp-action="Index" style="font-weight:bold; color: #00adbb">Geri</a><span> Dönebilirsiniz</span>



        </form>
    </div>
    <div class="left-container">
</div>
</div>


<style>
    body {
        background-image: linear-gradient(to top right,#525252, #00adbb);
        min-height: 90vh;
        margin: 0;
        font-family: 'Secular One', sans-serif;
    }

    h1 {
        margin: 0;
    }

    a {
        text-decoration: none;
        color: #0d28c0;
    }

        a:hover {
            color: #071561;
        }

    .main-container {
        display: flex;
        width: 70%;
        height: 770px;
        min-height: 80vh;
        background-color: white;
        margin: 10vh auto;
        border-radius: 12px;
        box-shadow: 5px 5px 20px 0px rgba(0, 0, 0, 0.5);
    }

        .main-container .hidden {
            display: none;
        }

    .login-link {
        color: #777;
    }

        .login-link:hover {
            color: #333;
            cursor: pointer;
        }

    .right-container {
        width: 50%;
        height: 100%;
        background-color: white;
        border-radius: 10px 0 0 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    right-container > * {
        transition: all 0.3s;
    }

    .left-container {
        width: 70%;
        height: 100%;
        background-image: url('https://images.unsplash.com/photo-1519408469771-2586093c3f14?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2147&q=80');
        background-position: center;
        background-size: cover;
        border-radius: 0 10px 10px 0;
    }

    .left-container {
        width: 50%;
    }
</style>