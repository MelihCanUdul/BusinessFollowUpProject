@model AppUserListViewModel
@{ string active = string.Empty;
    if (TempData["Active"] != null)
    {
        active = TempData["Active"].ToString();
    } }
<div class="border border-right" id="sidebar-wrapper">
    <div class="sidebar-heading">
       
        
        <img src="~/img/interra.svg" />
        <br />
        <img src="~/img/@Model.Picture" alt="@Model.Name" class="img-thumbnail" style="height:260px;width:200px;" />
        <h4 style="color:white;text-align:center" class="mt-2">@Model.Name @Model.Surname  </h4>
        <h6 style="color:white;text-align:center">Hoşgeldiniz !</h6>
    </div>
        
    <div class="list-group list-group-flush">

        <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action  @(active=="home"?"active":"") ">
            <i class="fas fa-home mr-2"></i>
            Ana Sayfa
        </a>

        <a asp-action="Index" asp-controller="Task" class="list-group-item list-group-item-action @(active=="task"?"active":"")"><i class="fas fa-tasks mr-2"></i> Görev İşlemleri</a>
        <a asp-action="Index" asp-controller="Urgency" class="list-group-item list-group-item-action  @(active=="urgency"?"active":"")">
            <i class="fas fa-exclamation mr-2"></i>
            Aciliyet İşlemleri
        </a>
        <a asp-action="Index" asp-controller="WorkOrder" class="list-group-item list-group-item-action  @(active=="workorder"?"active":"")">
            <i class="far fa-file mr-2"></i>
            İş Emirleri
        </a>
        


        <a asp-action="Index" asp-controller="Notice" class="list-group-item list-group-item-action position-relative  @(active=="notice"?"active":"")">
            <i class="far fa-bell mr-2"></i>
            @if (ViewBag.NoticeCount > 0)
            {
    <sub class="badge badge-info badge-pill position-absolute" style="bottom:0.625rem!important;left:1.7rem!important;"><small>@ViewBag.NoticeCount</small></sub>            }

            Bildirimler
        </a>

        <a asp-action="Index" asp-controller="Profile" class="list-group-item list-group-item-action @(active=="profile"?"active":"")"><i class="fas fa-user mr-2"></i>Profilim</a>
        <a asp-area="" asp-action="SignOut" asp-controller="Home" class="list-group-item list-group-item-action "><i class="fas fa-sign-out-alt mr-2"></i>Çıkış</a>
    </div>
</div>


